\begingroup \toks 0={macro:-> \begin {axis}[ anchor=origin, set layers=standard, disabledatascaling, xmin=-1,xmax=1, ymin=-0,ymax=1, x=2.5cm,y=2.5cm, grid=both, grid style={line width=.1pt, draw=gray!10}, axis lines=middle, minor tick num=0, enlargelimits={abs=0.2}, axis line style={latex-latex}, ticklabel style={font=\tiny ,fill=white}, xlabel style={at={(ticklabel* cs:1)},anchor=north west}, ylabel style={at={(ticklabel* cs:1)},anchor=south west} ] \par \addplot [name path=f,no marks,mypink,thick,domain=-1:1, samples=25, draw=none] ({x},{x*x}); \addplot [no marks,mypink,thick,domain=-2:2, samples=25,smooth] ({x},{x*x}); \addplot [name path=g, no marks,green!50!black,thick,domain=-3:3, samples=2] ({x},{1}); \addplot [thick, color=blue, fill=blue, fill opacity=0.25] fill between [of=f and g, split]; \par \foreach \i in {0,.1,...,1} { \addplot [domain=-1:1, white] ({x},{(1-\i )*x^2+\i }); } \foreach \i in {-1,-.8,...,1} { \addplot [domain=0:1, white] ({\i },{(1-x)*(\i )^2+x}); } \par \addplot [no marks,mypink,thick,domain=-2:2, samples=25,smooth] ({x},{x*x}); \addplot [name path=g, no marks,green!50!black,thick,domain=-3:3, samples=2] ({x},{1}); \par \end {axis} }\xdef \tikzexternallastkey {\the \toks 0 }\endgroup %
